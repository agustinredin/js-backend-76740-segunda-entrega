<h1>Lista de productos en tiempo real</h1>
<form id="products-add-form">
        <input type="text" placeholder="Nombre" id="name" name="name">
        <input type="number" placeholder="Precio" id="price" inputmode="numeric" max="100" name="price">
        <button type="submit">Enviar</button>
</form>

<form id="products-delete-form">
    <input type="number" name="id" placeholder="Id a eliminar" required/>
    <button type="submit">Eliminar</button>
</form>

<ul id="productList"></ul>

<script src="/socket.io/socket.io.js"></script>
<script src="/realtime.js"></script>